# SXHKD is a daemon to set all your keyboard shortcuts
# The organization is as follows:
#	- sxhkdrc (this file) contains all the shortcuts that are independent of the WM
#	- sxhkdrc-* contains all the shortcuts specific to a particular WM
# The proper way to use this should be to add the line 'sxhkd -c PATH_TO_CONFIG/sxhkdrc PATH_TO_CONFIG/sxhkdrc-*

super + Return
	$TERMINAL
super + d
	dmenu_col_run -l 10
super + shift + q
	dmenu-quit
super + x
	pkill -USR1 sxhkd
super + ctrl + l
	slock

super + {_,shift} + c
	{configure,cheatsheets}
super + shift + h
	$TERMINAL -e htop
super + shift + d
	[ -d $HOME/Downloads ] && cd $HOME/Downloads && $TERMINAL
super + m
	man-this
super + o
	todo

super + F1
	dmenu-usb
# Add a pipe to the lemonbar to notify the change
super + F2
	mailsync -a && [ -e $LLIMA_FIFO ] && echo "M" >$LLIMA_FIFO
super + F3
	update-news

# Usual program launchers
super + alt + {_,shift} + f
	firefox { ,--private-window}
super + alt + t
	thunderbird
super + alt + n
	$TERMINAL -e newsboat
super + alt + shift + t
	telegram-desktop
super + alt + c
	clementine
super + alt + y
	$TERMINAL -e lynx
super + alt + r
	transmission-gtk
super + alt + a
	$TERMINAL -e curseradio
super + alt + m
	$TERMINAL -e neomutt && [ -e $LLIMA_FIFO ] && echo "M" >$LLIMA_FIFO
super + alt + o
	chromium
super + alt + h
	thunar $HOME
super + alt + v
	virtualbox
# End of usual program launchers

# Take a screenshot of currently selected window/whole screen
{_,shift} + Print
	scrot {-u, }

# Volume controls
# From https://faq.i3wm.org/question/3747/enabling-multimedia-keys/
# Add a pipe to the lemonbar to notify the change
{XF86AudioRaiseVolume, super + plus}
	pactl set-sink-volume 0 +2% && [ -e $LLIMA_FIFO ] && echo "V" >$LLIMA_FIFO
{XF86AudioLowerVolume, super + minus}
	pactl set-sink-volume 0 -2% && [ -e $LLIMA_FIFO ] && echo "V" >$LLIMA_FIFO
XF86AudioMute
	pactl set-sink-mute 0 toggle && [ -e $LLIMA_FIFO ] && echo "V" >$LLIMA_FIFO

# Brightness controls
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	xbacklight {-inc,-dec} 10

# Monitor layouts
super + ctrl + {0,1,2,3}
	screen-layout { ,Ãºnic,dual-dreta,dual-esquerra}

# LaTeX commands
super + l : super + {a,b,v}
	$HOME/.local/bin/latex/{addtobib,copytoclipboard,compile -V}
super + l : super + {_,shift} + e
	{ ,$HOME/.local/bin/latex/removefile &&} $HOME/.local/bin/latex/compile -E
super + l : super + {_,shift} + c
	{ ,$HOME/.local/bin/latex/removefile &&} $HOME/.local/bin/latex/compile
super + l : super + {_,shift} + p
	{ ,$HOME/.local/bin/latex/removefile &&} $HOME/.local/bin/latex/compile -p
super + l : super + shift + b
	$HOME/.local/bin/latex/compile -b
super + l : super + Return
	cd "$(dirname $($HOME/.local/bin/latex/getcurrentfile))" && $TERMINAL
