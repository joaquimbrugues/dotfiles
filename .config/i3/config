# reload the configuration file
#bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+q exec quiti3

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        # bindsym j resize shrink width 10 px or 10 ppt
        # bindsym k resize grow height 10 px or 10 ppt
        # bindsym l resize shrink height 10 px or 10 ppt
        # bindsym ntilde resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 2 px or 2 ppt
        bindsym Down resize grow height 2 px or 2 ppt
        bindsym Up resize shrink height 2 px or 2 ppt
        bindsym Right resize grow width 2 px or 2 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

set $bg-color            #2f548f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #5E3935

# window colors
#                       border             background         text                 indicator
client.focused          $bg-color          $bg-color          $text-color          #8000ff
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #8000ff
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #8000ff
client.urgent           $urgent-bg-color   $urgent-bg-color   $text-color          #8000ff

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3blocks -c ~/.config/i3/i3blocks.conf
	position top
	colors {
		background $inactive-bg-color
		separator #757575
		#                  border             background         text
		focused_workspace  $bg-color          $bg-color          $text-color
		inactive_workspace $inactive-bg-color $inactive-bg-color $inactive-text-color
		urgent_workspace   $urgent-bg-color   $urgent-bg-color   $text-color
	}
}

# Custom key bindings

# Lock screen
bindsym $mod+Control+l exec i3lock -ef -c "$inactive-bg-color"

# Edit this configuration file
bindsym $mod+c exec i3-sensible-terminal -hold -e nano $HOME/.config/i3/config
# Execute htop
bindsym $mod+Shift+h exec i3-sensible-terminal -hold -e htop
# Open the Downloads folder
bindsym $mod+Shift+d exec thunar $HOME/Downloads
# Show a manpage in PDF format
bindsym $mod+m exec man-this
# Show a help cheatsheet from selection
bindsym $mod+Shift+c exec cheatsheets

# Launch mode
mode "launch" {
	# Launch Firefox
	bindsym f exec firefox; mode "default"
	bindsym t exec thunderbird; mode "default"
	bindsym n exec i3-sensible-terminal -hold -e newsboat; mode "default"
	bindsym g exec geany; mode "default"
	bindsym Shift+t exec telegram-desktop; mode "default"
	bindsym h exec thunar $HOME; mode "default"
	bindsym c exec clementine; mode "default"
	bindsym v exec vlc; mode "default"
	bindsym l exec i3-sensible-terminal -hold -e lynx; mode "default"
	bindsym r exec transmission-gtk; mode "default"
	bindsym Shift+c exec chromium; mode "default"
	bindsym Shift+r exec i3-sensible-terminal -hold -e curseradio; mode "default"

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+l mode "launch"

# Screenshooter
bindsym $mod+s exec xfce4-screenshooter -w # Take a screenshoot of the active window
bindsym $mod+Shift+s exec xfce4-screenshooter -f # Take a screenshoot of the whole screen

# Shortcuts to switch display configurations
bindsym $mod+Control+1 exec xrandr --output LVDS-1 --mode 1366x768 --output HDMI-1 --off; exec wallpaper
bindsym $mod+Control+2 exec xrandr --output LVDS-1 --mode 1366x768 --pos 0x312 --primary --output HDMI-1 --mode 1920x1080 --pos 1366x0; exec wallpaper
bindsym $mod+Control+3 exec xrandr --output LVDS-1 --mode 1366x768 --pos 1920x312 --primary --output HDMI-1 --mode 1920x1080 --pos 0x0; exec wallpaper
bindsym $mod+Shift+m exec screen-layout

# From https://faq.i3wm.org/question/3747/enabling-multimedia-keys/?answer=3759#post-id-3759
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +1%; exec pkill -RTMIN+10 i3blocks #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -1%; exec pkill -RTMIN+10 i3blocks #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle; exec pkill -RTMIN+10 i3blocks # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

# Touchpad controls
# bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Set wallpaper
exec_always wallpaper

# Set the keyboard layout
exec_always ibus restart

# Autostart dropbox
exec dropbox start

# Autostart owncloud
exec owncloud

# Autostart compton
exec compton -f

# Autostart transmission
exec transmission-gtk -m

# LaTeX mode:
# Use shortcuts to manage the bibliography and compile a document
mode "LaTeX" {
	# Manage the bibliography
	bindsym $mod+b exec $HOME/.local/bin/latex/copytoclipboard.sh
	bindsym $mod+a exec $HOME/.local/bin/latex/addtobib.sh

	# Edit file
	bindsym $mod+e exec $HOME/.local/bin/latex/compile.sh -E
	# Edit new file
	bindsym $mod+Shift+e exec $HOME/.local/bin/latex/removefile.sh; exec $HOME/.local/bin/latex/compile.sh -E

	# Compile file
	bindsym $mod+c exec $HOME/.local/bin/latex/compile.sh
	# Compile new file
	bindsym $mod+Shift+c exec $HOME/.local/bin/latex/removefile.sh; exec $HOME/.local/bin/latex/compile.sh

	# Compile file to PDF
	bindsym $mod+p exec $HOME/.local/bin/latex/compile.sh -p
	# Compile new file to PDF
	bindsym $mod+Shift+p exec $HOME/.local/bin/latex/removefile.sh; exec $HOME/.local/bin/latex/compile.sh -p

	# Compile bibliography of the file
	bindsym $mod+Shift+b exec $HOME/.local/bin/latex/compile.sh -b

	# Back to default mode
	bindsym $mod+q mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+t mode "LaTeX"
