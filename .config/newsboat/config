#auto-reload yes

max-items	100

color listnormal cyan default
color listfocus green default bold
color listnormal_unread yellow default
color listfocus_unread green default bold
color info red default bold
color article cyan default
highlight all "---.*---" blue default bold
highlight feedlist ".*(0/0))" black

browser "lynx %u"
macro , open-in-browser
macro y set browser "lynx %u"; open-in-browser
macro f set browser "firefox %u"; open-in-browser ; set broswer "lynx %u"
macro v set browser "mpv %u"; open-in-browser ; set browser "lynx %u"
macro c set browser "echo -n %u | xclip -i -selection clipboard"; open-in-browser ; set browser "lynx %u"
macro d set browser "xclip-ytdownload %u"; open-in-browser ; set browser "lynx %u"
macro s set browser "surf %u"; open-in-browser ; set browser "lynx %u"

#Podboat configuration
download-path "~/Podcast"
