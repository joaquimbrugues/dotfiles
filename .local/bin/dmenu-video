#!/bin/sh
# Look for videos in the HOME folder and open a dmenu to reproduce one of them

. $HOME/.local/share/global-style
DMENU_HEIGHT=$(echo "$BAR_HEIGHT" | awk '{print $1 + 5}')

FILE=$(locate "$HOME/Video" "$HOME/Downloads" | grep -E ".*\.avi$|.*\.mkv$|.*\.mp4$|.*\.webm$" | dmenu_col -l 10 -p "Obre amb MPV")
if [ -e "$FILE" ]; then
	DEL=$(echo -e "No\nSí" | dmenu_col -h "$DMENU_HEIGHT" -p "Vols esborrar el fitxer en acabar?")
	mpv --sub=1 "$FILE" && [ "$DEL" = "Sí" ] && rm "$FILE"
fi
