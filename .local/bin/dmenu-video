#!/bin/sh
# Look for videos in the HOME folder and open a dmenu to reproduce one of them

FILE=$(locate ".mkv" ".mp4" ".webm" | grep "$HOME" | dmenu_col -l 10 -p "Obre amb MPV")
if [ -e "$FILE" ]; then
	DEL=$(echo -e "No\nSí" | dmenu_col -p "Vols esborrar el fitxer en acabar?")
	mpv --sub=1 "$FILE" && [ "$DEL" = "Sí" ] && rm "$FILE"
fi
