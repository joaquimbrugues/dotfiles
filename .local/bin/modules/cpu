#!/bin/sh
#CPU module. Print CPU usage and core temperature
INTERVAL=5

while true; do
	cpu_usage=$(top -bn1 | grep "Cpu(s)" | grep -Po "(\d+[,\.]*\d*)(?=%* *id)" | awk '{print 100 - $1}')
	temperature=$(sensors | awk '/Core 0/ {print $3}')
	echo "CCPU: $cpu_usage%% $temperature"
	sleep $INTERVAL
done
