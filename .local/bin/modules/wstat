#!/bin/sh
# Internet module. Show if internet is up or not
INTERVAL=60

while true; do
	find "/sys/class/net/" -name "operstate" | grep -q '.' || echo -e "I\uf00d"
	case $(cat /sys/class/net/w*/operstate) in
		down) echo -e "I\uf00d" ;;
		up) echo -e "I\uf1eb" ;;
		*) ;;
	esac
	sleep $INTERVAL
done
