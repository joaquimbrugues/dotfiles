#!/bin/sh
# Quit from i3/power off the machine/reboot selecting the option from a dmenu
OPTIONS="Cabòries!\\nTanca la sessió\\nApaga\\nReinicia"
case $(echo $OPTIONS | dmenu -p "Què vols fer?" -l 20) in
	Tanca\ la\ sessió) i3-msg exit;;
	Apaga) systemctl poweroff;;
	Reinicia) systemctl reboot;;
	*) ;;
esac
