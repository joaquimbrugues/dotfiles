#!/bin/sh
# Use a dmenu to switch between diferent screen layouts with xrandr
CHOICES="únic\\ndual-dreta\\ndual-esquerra\\naltre"
PICK=$1
[ -z $PICK ] && PICK=$(echo $CHOICES | dmenu -p "Distribució de monitors" -l 10)

case $PICK in
	únic) xrandr --output LVDS-1 --mode 1366x768 --output HDMI-1 --off && wallpaper;;
	dual-dreta) xrandr --output LVDS-1 --mode 1366x768 --pos 0x312 --primary --output HDMI-1 --mode 1920x1080 --pos 1366x0 && wallpaper;;
	dual-esquerra) xrandr --output LVDS-1 --mode 1366x768 --pos 1920x312 --primary --output HDMI-1 --mode 1920x1080 --pos 0x0 && wallpaper;;
	altre) arandr && wallpaper;;
	*) ;;
esac
