#!/bin/sh
# Use a dmenu to switch between diferent screen layouts with xrandr
CHOICES="únic\\ndual-dreta\\ndual-esquerra\\naltre"
PICK=$1
[ -z $PICK ] && PICK=$(echo $CHOICES | dmenu -p "Distribució de monitors" -l 10)

case $PICK in
	únic)
		xrandr --output DP-1 --mode 1280x1024 --output HDMI-1 --off
		pgrep bspwm >/dev/null && bspc monitor DP-1 -d 1 2 3 4 5 6 7 8 9 0
		wallpaper
	;;
	dual-dreta)
		xrandr --output DP-1 --mode 1280x1024 --pos 0x0 --primary --output HDMI-1 --mode 1280x1024 --pos 1280x0
		pgrep bspwm >/dev/null && bspc monitor DP-1 -d 1 2 3 4 5 && bspc monitor HDMI-1 -d 6 7 8 9 0
		wallpaper
	;;
	dual-esquerra)
		xrandr --output DP-1 --mode 1280x1024 --pos 1280x0 --primary --output HDMI-1 --mode 1280x1024 --pos 0x0
		pgrep bspwm >/dev/null && bspc monitor DP-1 -d 1 2 3 4 5 && bspc monitor HDMI-1 -d 6 7 8 9 0
		wallpaper
	;;
	altre)
		arandr
		pgrep bspwm >/dev/null && bspc monitor DP-1 -d 1 2 3 4 5 && bspc monitor HDMI-1 -d 6 7 8 9 0
		wallpaper
	;;
	*) ;;
esac
