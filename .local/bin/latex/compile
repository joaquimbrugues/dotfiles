#!/bin/sh
# Multi-use script. Invoke getcurrentfile and do some action with it
FILE=$($HOME/.local/bin/latex/getcurrentfile)
[ -z "$FILE" ] && notify-send "‚ùóÔ∏è ERROR: No s'ha seleccionat cap fitxer tex" && exit 1
DIR=$(dirname "$FILE")
TERMINAL="st"
EDITOR="nvim"
VIEWER="zathura"

case "$1" in
	-p|--pdf) cd "$DIR" && pdflatex $(basename "$FILE") && notify-send "üõ† Compilat!" ;;
	-b|--bibliography) if [ -r $BIB ]
		then
			[ ! -e "$(echo $DIR/references.bib)" ] && ln -s $BIB "$DIR/references.bib"
			cd "$DIR" && bibtex $(basename "$FILE" | sed -e 's/\.tex/\.aux/') && notify-send "üìö Compilat!"
		fi
		;;
	-E|--edit)
		LIST=$(find "$DIR" -name "*.tex" -o -name "*.tikz" -o -name "*.sty")
		[ $(echo "$LIST" | wc -l) -gt 1 ] && PICK=$(echo "$LIST" | dmenu_col -p "Tria un fitxer per editar (per defecte=$(basename $FILE))" -l 10)
		if [ -z $PICK ]
		then
			$TERMINAL -e $EDITOR "$FILE"
		else
			$TERMINAL -e $EDITOR "$PICK"
		fi
		;;
	-V|--view)
		LIST=$(find "$DIR" -name "*.pdf")
		if [ $(echo "$LIST" | wc -l) -gt 1 ]; then
			PICK=$(echo "$LIST" | dmenu_col -p "Tria un pdf a visualitzar" -l 10)
		else
			PICK="$LIST"
		fi
		if [ -z "$PICK" ]
		then
			notify-send "‚ùóÔ∏è No s'ha seleccionat cap pdf"
		else
			$VIEWER "$PICK"
		fi
		;;
	-T|--theorem)
		LIST=$(find "$DIR" -name "*.tex" -o -name "*.sty")
		PICK=$(grep '\newtheorem{' $LIST | sed -e 's/.*\\newtheorem{//g' -e 's/}.*//g' | dmenu_col -p "Entorns de teorema" -l 10)
		[ -z "$PICK" ] && exit 0
		echo -ne "\\\\begin{$PICK}\n\\\\end{$PICK}" | xclip -i -selection clipboard && notify-send "üìé S'ha copiat al portaretalls" "\\\\begin{$PICK}\\\\end{$PICK}"
		;;
	-R|--reference)
		LIST=$(find "$DIR" -name "*.tex")
		PICK=$(grep '\label{' $LIST | sed -e 's/.*\\label{//g' -e 's/}.*//g' | dmenu_col -p "Refer√®ncies" -l 10)
		[ -z "$PICK" ] && exit 0
		echo -n "\\ref{$PICK}" | xclip -i -selection clipboard && notify-send "üìé S'ha copiat \\ref{$PICK} al portaretalls"
		;;
	*) cd "$DIR" && latex $(basename "$FILE") && notify-send "üõ† Compilat!" ;;
esac
