#!/bin/sh
# Grab selection from xclip and input this to youtube-dl
# Depends on xclip and youtube-dl
pgrep youtube-dl && notify-send "YT-DL: Descarregant un fitxer" && exit 0
URL=$(xclip -o)
echo "$URL" | grep "http" >/dev/null || exit 0
notify-send "YT-DL: Descarregant..." "$URL"
youtube-dl --write-auto-sub --embed-subs "$URL" --output "$HOME/Downloads/%(title)s.%(ext)s" && updatedb -U $HOME -l no -o $LOCALDB && notify-send "YT-DL: S'ha descarregat el fitxer!"
