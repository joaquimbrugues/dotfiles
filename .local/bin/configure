#!/bin/bash
# Show the contents of the dotfiles repository into dmenu and open the selected file in the editor.

FILE=""
[ -d $HOME/.dotfiles ] && FILE=$(git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME ls-files | dmenu -p "Tria un fitxer per editar" -l 10)
[ -z $FILE ] && exit 0
$TERMINAL -e $EDITOR $FILE
