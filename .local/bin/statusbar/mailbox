	1) mbsync -a ;;
	2) i3-sensible-terminal -e neomutt ;;
	3) notify-send "ðŸ“¬ Mailbox module" "\- Shows number of unread mails.
- Click to update the mailbox.
- Middle-click to open neomutt." ;;
esac

